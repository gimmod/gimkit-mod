{
    "compilationOptions": {
        "preferredConfigPath": "./tsconfig.json"
    },

    "entries": [
        {
            "filePath": "./src/index.ts",
            "outFile": "./dist/colyseus.d.ts",

            "failOnClass": false,
            "noCheck": false,

            "libraries": {
                "inlinedLibraries": [
                    "@colyseus/schema",
                    "@gamestdio/websocket",
                    "@gamestdio/state-listener",
                    "nanoevents"
                ]
            },

            "output": {
                "inlineDeclareGlobals": false,
                "sortNodes": false,

                "umdModuleName": "Colyseus",
                "inlineDeclareExternals": false,
                "noBanner": false,
                "respectPreserveConstEnum": false
            }
        }
    ]
}
